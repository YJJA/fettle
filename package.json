{
  "name": "fettle",
  "version": "0.1.0",
  "description": "A state management library for React, Like Recoil without Effects. ",
  "type": "module",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "source": "src/index.ts",
  "react-native": "src/index.ts",
  "scripts": {
    "build:commonjs": "tsc --outDir lib/commonjs --declaration false",
    "build:module": "tsc -m esNext --outDir lib/module --declaration false",
    "build:typescript": "tsc --declaration --emitDeclarationOnly --outDir lib/typescript",
    "build": "yarn clean && yarn build:commonjs && yarn build:module && yarn build:typescript",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "clean": "del lib",
    "test": "jest",
    "prepublishOnly": "npm run test && npm run build"
  },
  "files": [
    "src",
    "lib"
  ],
  "dependencies": {
    "payload-is": "^0.1.1",
    "promise.any": "^2.0.4",
    "tslib": ">=2.4.0",
    "use-sync-external-store": "^1.2.0"
  },
  "peerDependencies": {
    "react": ">=16.13.1"
  },
  "homepage": "https://github.com/YJJA/fettle.git#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/YJJA/fettle.git"
  },
  "bugs": {
    "url": "https://github.com/YJJA/fettle.git/issues"
  },
  "author": {
    "name": "Liu Hong",
    "email": "hongdoit@icloud.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-webpack4": "^6.5.10",
    "@storybook/manager-webpack4": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/globalthis": "^1.0.1",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.6.5",
    "@types/promise-polyfill": "^6.0.4",
    "@types/promise.any": "^2.0.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-test-renderer": "^18.0.0",
    "@types/use-sync-external-store": "^0.0.3",
    "babel-loader": "^8.2.5",
    "del-cli": "^5.0.0",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "promise-polyfill": "^8.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  }
}
